<%= simple_form_for @fixpoint do |f| %>
  <% if @fixpoint.errors.any? %>
  <div id="error_explanation">
   <div class="alert alert-error">
     The form contains <%= pluralize(@fixpoint.errors.count, "error") %>.
   </div>
  <ul>
   <% @fixpoint.errors.full_messages.each do |msg| %>
    <li>* <%= msg %></li>
   <% end %>
 </ul>
</div>
<% end %>

<%= f.input :category, as: :select, collection: Fixpoint.categories.keys.to_a %>
  <%= f.input :address %>

  <%= f.simple_fields_for :fixpoint_attachments do |faf| %>
    <%= faf.file_field :photo, multiple: true, name: "fixpoint_attachments[photo][]", label: "Photos" %>
  <% end %>

  <%= f.button :submit, class: 'btn btn-primary btn-lg btn-block mt-4' %>
<% end %>
