<div id="fixpoint-images-carousel-<%= fixpoint.id %>" class="carousel slide" data-ride="carousel" data-interval="false">
  <div class="carousel-inner">
    <% fixpoint.fixpoint_attachments.reverse_order.each_with_index do |attachment, index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
        <%= cl_image_tag attachment.photo, class: 'd-block w-100', height: 200 %>
      </div>
    <% end %>
  </div>
  <% if fixpoint.fixpoint_attachments.size > 1 %>
    <a class="carousel-control-prev" href="#fixpoint-images-carousel-<%= fixpoint.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#fixpoint-images-carousel-<%= fixpoint.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  <% end %>
</div>

