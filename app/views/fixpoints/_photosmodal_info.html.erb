<!-- The Modal -->
<div class="modal" id="fixpoint_<%= fixpoint.id %>">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Show us your Photos</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <p style="text-align: center;">We would love to see pictures of the fixes.
        <br> So everyone can marvel at the new CityMakeover!</p>
      <%= simple_form_for [fixpoint, FixpointAttachment.new] do |f| %>
      <%= f.label :photos %>
      <%= f.file_field :photo,input_html: { class:"btn btn-success" } %>


      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
      <%= f.button :submit,'Add Photos', class: "btn-primary mb-2" %>
      <% end %>
      </div>

    </div>
  </div>
</div>

<style>

.modal-backdrop.show {
    opacity: inherit!important;
}

.modal-backdrop {
  position:inherit!important;
}
</style>


